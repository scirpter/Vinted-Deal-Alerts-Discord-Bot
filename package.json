{
  "name": "kreziax",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": "24.11.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "test": "vitest run",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "migrate": "tsx src/scripts/migrate.ts",
    "setup": "pnpm migrate && pnpm deploy:commands"
  },
  "dependencies": {
    "@incognia/web-sdk": "^1.19.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "mysql2": "^3.16.0",
    "neverthrow": "^8.2.0",
    "p-queue": "^9.1.0",
    "p-retry": "^7.1.1",
    "pino": "^10.2.0",
    "ulid": "^3.0.2",
    "zod": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.8",
    "@vitest/coverage-v8": "^4.0.17",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
